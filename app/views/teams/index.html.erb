<div class="row">
  <div class="col-lg-6">
    <h2>Departments:</h2>
    <% @users.each do |user| %>
      <h3><%= user.name %></h3>
    <% end %>
  <div class="row">
    <h2>Teams:</h2>
      <% @teams.each do |team| %>
        <h3><%= team.name %></h3>
      <% end %>
  </div>
</div>

  <div class="col-lg-6">
    <%= simple_form_for @team do |f| %>
      <%= f.select(:user_id, @users.map {|u| [u.name, u.id] }) %>
      <%= f.input :name %>
      <%= f.button :submit %>
    <% end %>
  </div>

</div>